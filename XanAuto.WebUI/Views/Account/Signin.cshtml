@model UserModel
@{
    ViewData["Title"] = "SignIn";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<head>

</head>

<body>
    <form method="post" autocomplete="off">

        <div>
            <div>
                <div>
                        <div asp-validation-summary="All"></div>
                    @if(!string.IsNullOrWhiteSpace(ViewBag.Message)){
                    <div style="color:red">
                        @ViewBag.Message
                    </div>
                    }
                    <div>
                        <h3>
                            Sign In
                        </h3>
                    </div>
                    <div>
                        <h3>
                            <a asp-action="Register">Register</a>
                        </h3>
                    </div>
                </div>
                <div>
                    <input id="username" placeholder=" Email or Username" asp-for="Username">
                </div>
                <div>
                    <input id="password" type="password"placeholder="Password" asp-for="Password">
                </div>
                <div>
                    <div>
                        <div>
                            <label>
                                <input type="checkbox" value="">
                                <span>
                                    <i></i>
                                </span>
                                <span>Remember me</span>
                            </label>
                        </div>
                        <div>
                            <a asp-action="forgotpassword">
                                Forgot
                                Password?
                            </a>
                        </div>
                    </div>
                </div>
                <div>
                    <div>
                        <button type="submit"> Sign in</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>


</html>
